<!-- Foundation -->
<window id="125">

	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="400" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="400" delay="400" />
	</animation>

	<controls>
	
		<control type="group">
		
			<control type="image">
					
				<include>Common_Dimensions</include>
				<texture>overlays/overlay_fullscreen_top.png</texture>
				
			</control>
			
			<!--Top Area-->
			<include>Common_Breadcrumb_Alt</include>	
			
			<!--Information Area-->
			<control type="group">
			
				<posx>880</posx>
				<posy>0</posy>
				<width>400</width>
				<height>720</height>
				
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="400" delay="400"/>
					<effect type="slide" start="1280,0" end="0,0" time="800" delay="400" tween="cubic" easing="out" />
				</animation>
				
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" time="400" />
					<effect type="slide" start="0,0" end="1280,0" time="800" tween="cubic" easing="out" />
				</animation>
				
				<control type="image">
				
					<posx>0</posx>
					<posy>0</posy>
					<width>700</width>
					<height>720</height>
					<texture background="true">colors/color_white.png</texture>
					<colordiffuse>FanartDiffuse</colordiffuse>
				
				</control>
				
				<control type="image">
				
					<posx>40</posx>
					<posy>40</posy>
					<width>320</width>
					<height>200</height>
					<texture background="true">$INFO[Container(11).ListItem.Thumb]</texture>
					<aspectratio>scale</aspectratio>
					<fadetime>400</fadetime>
					
				</control>
				
				<control type="label">
						
					<posx>32</posx>
					<posy>100</posy>
					<width>330</width>
					<height>400</height>
					<label>No bookmarks available.[CR][CR]Click 'Create bookmark' to add a new bookmark.</label>
					<font>Menu-List</font>
					<textcolor>Label_Normal</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<aligny>top</aligny>
					<visible>IsEmpty(Container(11).ListItem(0).Label)</visible>
					
				</control>
				
				<control type="list" id="11">
						
					<posx>0</posx>
					<posy>280</posy>
					<width>700</width>
					<height>480</height>
					<onleft>9000</onleft>
					<onright>9000</onright>
					<onup>9001</onup>
					<ondown>9001</ondown>
					<pagecontrol>9011</pagecontrol>
					<viewtype label="535">list</viewtype>
					<scrolltime tween="cubic" easing="out">600</scrolltime>
					<preloaditems>2</preloaditems>
					
					<itemlayout width="700" height="60">

						<control type="label">
						
							<posx>32</posx>
							<posy>0</posy>
							<width min="20" max="380">auto</width>
							<height>60</height>
							<label>[LOWERCASE]$INFO[ListItem.Label][/LOWERCASE]</label>
							<font>Menu-List</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>center</aligny>
							
						</control>

					</itemlayout>

					<focusedlayout width="700" height="60">

						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>400</width>
							<height>60</height>
							<texture>colors/color_white.png</texture>
							<colordiffuse>Background_Highlight</colordiffuse>
						
						</control>
					
						<control type="label">
						
							<posx>32</posx>
							<posy>0</posy>
							<width min="20" max="380">auto</width>
							<height>60</height>
							<label>[LOWERCASE]$INFO[ListItem.Label][/LOWERCASE]</label>
							<font>Menu-List</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>center</aligny>
							<scrollspeed>0</scrollspeed>
							
						</control>

					</focusedlayout>

				</control>
				
				<control type="grouplist" id="9000">
				
					<posx>100</posx>
					<posy>620</posy>
					<width>760</width>
					<height>116</height>
					<itemgap>32</itemgap>
					<orientation>horizontal</orientation>
					<align>center</align>
					<onleft>9000</onleft>
					<onright>9000</onright>
					
					<control type="button" id="2">
						
						<include>Common_AppBar_Button</include>
						<texturefocus>appbar/appbar_addbookmark_focus.png</texturefocus>
						<texturenofocus>appbar/appbar_addbookmark.png</texturenofocus>
						<label>create[CR]bookmark</label>
						<onup>11</onup>
						<ondown>11</ondown>
						
					</control>
					
					<control type="button" id="3">
						
						<include>Common_AppBar_Button</include>
						<texturefocus>appbar/appbar_createbookmark_focus.png</texturefocus>
						<texturenofocus>appbar/appbar_createbookmark.png</texturenofocus>
						<label>clear[CR]bookmark</label>
						<onup>11</onup>
						<ondown>11</ondown>
						
					</control>
					
				</control>
				
			</control>
			
		</control>

	</controls>

</window>
