<includes>
	
	<include name="Common_SlideMenu">
		
		<control type="group">
			
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus | Control.HasFocus(19)">
				<effect type="slide" start="0,0" end="-320,0" time="400" tween="cubic" easing="out" />
			</animation>
			
			<control type="group">
				
				<posx>1280</posx>
				<posy>0</posy>
				<width>320</width>
				<height>720</height>
	
				<control type="group">
				
					<!--Background-->
					<control type="image">
					
						<posy>0</posy>
						<posy>0</posy>
						<width>320</width>
						<height>720</height>
						<texture background="true">colors/color_white.png</texture>
						<colordiffuse>Background_Normal</colordiffuse>			

					</control>
					
					<control type="label">
			
						<posx>32</posx>
						<posy>22</posy>
						<width>256</width>
						<height>32</height>
						<label>$VAR[SlideMenu_Header_Label]</label>
						<font>Menu-Header</font>
						<textcolor>Label_Normal</textcolor>
						<aligny>top</aligny>
					
					</control>
					
					<!--SlideMenu Listing-->
					<control type="grouplist" id="9000">
	
						<posx>0</posx>
						<posy>80</posy>
						<width>320</width>
						<height>720</height>
						<itemgap>0</itemgap>
						<pagecontrol>-</pagecontrol>
						<orientation>vertical</orientation>
						<onup>SetFocus(19)</onup>
						<ondown>-</ondown>
						<onleft>SetFocus(50)</onleft>
						<onright>SetFocus(50)</onright>
						<usecontrolcoords>true</usecontrolcoords>
						
						<!--Slide Menus-->
						<include condition="StringCompare(Window.Property(xmlfile),MyMusicPlaylist.xml)">SlideMenu_MyMusicPlaylist</include>
						<include condition="StringCompare(Window.Property(xmlfile),MyVideoPlaylist.xml)">SlideMenu_MyVideoPlaylist</include>
						
					</control>
				</control>
			</control>
		</control>		
	</include>
	
	<include name="SlideMenu_Header_Label">
		<width>320</width>
		<height>60</height>
		<aligny>left</aligny>
		<aligny>top</aligny>
		<font>Menu-Header</font>
		<textcolor>Label_Normal</textcolor>
	</include>
	
	<include name="SlideMenu_Button">
		
		<width>320</width>
		<height>60</height>
		
	</include>
	
	<include name="SlideMenu_RadioButton">
	
		<width>320</width>
		<height>60</height>
		<radioposx>240</radioposx>
		<radioposy>21</radioposy>
		
	</include>
	
	<include name="SlideMenu_FilterBox">
		
		<width>256</width>
		<height>44</height>
		<align>left</align>
		<aligny>top</aligny>
		<textoffsetx>10</textoffsetx>
		<textoffsety>4</textoffsety>
		<font>Menu-List</font>
		<selectedcolor>black</selectedcolor>
		<textcolor>black</textcolor>
		<disabledcolor>white_60</disabledcolor>
		<pulseonselect>false</pulseonselect>
		<texturenofocus>colors/color_white.png</texturenofocus>
		<texturefocus>colors/color_white.png</texturefocus>
		
	</include>
	
	<include name="SlideMenu_Section_Filter">
		
		<control type="group" id="200">
			
			<posx>32</posx>
			
			<!--Filter Inputbox-->
			<control type="edit" id="19">
				
				<include>SlideMenu_FilterBox</include>
				<onleft>SetFocus(50)</onleft>
				<onright>SetFocus(50)</onright>
				<ondown>SetFocus(9112)</ondown>
				
			</control>
			
			<control type="image">
			
				<posx>216</posx>
				<posy>4</posy>
				<width>36</width>
				<height>36</height>
				<texture>colors/color_white.png</texture>
				<colordiffuse>Background_Normal</colordiffuse>
				
			</control>
			
			<control type="image">
			
				<posx>223</posx>
				<posy>11</posy>
				<width>22</width>
				<height>22</height>
				<texture>breadcrumb/breadcrumb_search.png</texture>
				
			</control>
		
		</control>
		
	</include>
	
	<!--SlideMenu for MyMusicPlaylist.xml-->
	<include name="SlideMenu_MyMusicPlaylist">
		
		<!--Shuffle-->
		<control type="togglebutton" id="20">
			
			<include>SlideMenu_Button</include>
			<label>31139</label>
			<altlabel>31140</altlabel>
			<alttexturefocus border="19">menu_default_on.png</alttexturefocus>
			<alttexturenofocus>-</alttexturenofocus>
			<onright>SetFocus(52)</onright>
			
		</control>
		
		<!--Repeat-->
		<control type="togglebutton" id="26">
			
			<include>SlideMenu_Button</include>
			<label>$INFO[Control.GetLabel(26)]</label>
			<alttexturefocus border="19">menu_default_on.png</alttexturefocus>
			<alttexturenofocus>-</alttexturenofocus>
			<onright>SetFocus(52)</onright>
			
		</control>
		
		<!--Load/Save-->
		<control type="button" id="21">
			
			<include>SlideMenu_Button</include>
			<label>190</label>
			<onright>SetFocus(52)</onright>
			
		</control>	
		
		<!--Clear-->
		<control type="button" id="22">
			
			<include>SlideMenu_Button</include>
			<label>192</label>
			<onright>SetFocus(52)</onright>
			
		</control>
		
	</include>
	
	<!--SlideMenu for MyMusicSongs.xml-->
	<include name="SlideMenu_MyMusicSongs">
		
		<!--Filter Box and Header-->
		<include>SlideMenu_Section_Filter</include>
		
		<!--View List-->
		<control type="button" id="9112">
			
			<include>SlideMenu_Button</include>
			<label>List</label>
			<onclick>Container.SetViewMode(50)</onclick>
			
		</control>
		
		<!--View Thumbnails-->
		<control type="button" id="9114">
			
			<include>SlideMenu_Button</include>
			<label>Thumbnails</label>
			<onclick>Container.SetViewMode(52)</onclick>
			<visible>!Container.Content(Movies)</visible>
			
		</control>
		
		<!--Sort Order-->
		<control type="button" id="3">
			
			<include>SlideMenu_Button</include>
			<label>$INFO[Container.SortMethod]</label>
			
		</control>
		
		<!--Sort A-Z-->
		<control type="togglebutton" id="4">
			
			<include>SlideMenu_Button</include>
			<label>$LOCALIZE[584]</label>
			<altlabel>$LOCALIZE[585]</altlabel>
			<alttexturefocus border="19">menu_default_on.png</alttexturefocus>
			<alttexturenofocus>-</alttexturenofocus>
			
		</control>
		
		<!--Library Mode-->
		<control type="button" id="20">
			
			<include>SlideMenu_Button</include>
			<label>Library</label>
			<onclick>ActivateWindow(MusicLibrary,root)</onclick>
			
		</control>
		
	</include>
	
